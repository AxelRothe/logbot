{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./",
    "outDir": "./build",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["src/**/*", "index.ts"]
}
